{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "resolveJsonModule": true
    }
  },
  "compilerOptions": {
    "composite": false,
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}